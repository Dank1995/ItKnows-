<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>

    <!-- App display name -->
    <key>CFBundleName</key>
    <string>ItKnows</string>

    <key>CFBundleDisplayName</key>
    <string>ItKnows</string>

    <!-- Bundle ID -->
    <key>CFBundleIdentifier</key>
    <string>com.dk.itknows</string>

    <!-- Marketing version -->
    <key>CFBundleShortVersionString</key>
    <string>1.0.0</string>

    <!-- Build number â€” Codemagic injects FLUTTER_BUILD_NUMBER -->
    <key>CFBundleVersion</key>
    <string>$(FLUTTER_BUILD_NUMBER)</string>

    <!-- REQUIRED for TestFlight (error 90683) -->
    <key>NSBluetoothAlwaysUsageDescription</key>
    <string>ItKnows uses Bluetooth to connect to sensors during exercise.</string>

    <key>NSBluetoothPeripheralUsageDescription</key>
    <string>Bluetooth access is required to read your physiological sensor data in real time.</string>

    <!-- Background Bluetooth support -->
    <key>UIBackgroundModes</key>
    <array>
        <string>bluetooth-central</string>
    </array>

    <!-- Launch screen -->
    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>

    <!-- Orientation -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <!-- Encryption -->
    <key>ITSAppUsesNonExemptEncryption</key>
    <false/>

</dict>
</plist>
